<div class="header d-flex justify-content-between align-items-center" style="border: none;">

  <div class="icon" style="margin-left: 10px; margin-bottom: 25px; border: none;">
    <%= link_to root_path do %>
      <%= image_tag("icon-chevron-left.svg", width: "32px", height: "32px") %>
    <% end %>
  </div>

  <div class="text-center flex-grow-1" style="border: none; margin-left: 30px;">
    <h1 style="font-size: 20px; border: none;"><strong>Résultats</strong></h1>
  </div>

  <div class="icon" style="margin-right: 40px; margin-bottom: 25px; border: none;">
    <%= link_to image_tag("icon-search.svg", width: "32px", height: "32px"), "#" %>
  </div>

</div>

<section class="cards-container">
  <% @diagnostics.each do |diagnostic| %>
    <% patient = diagnostic.patient %>
    <% title = patient.gender == "male" ? "M." : "Mme." %>

    <%= link_to diagnostic_path(diagnostic), class: "assignation-link" do %>
      <div class="card custom-card">
        <div class="card-body">
          <div class="list-group-item">
            <ul class="list-unstyled mt-3">
              <li><h3>Résultats pour: <%= title %> <%= patient.name %></h3></li>
              <li><p><%= diagnostic.description %></p></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</section>

<ul class="list-group list-group-flush margin-top: 10px">
  <% @diagnostics.each do |diagnostic| %>
    <li class="list-group-item margin-correction">
      <div class="row mt-1 patient-card">
        <div class="col-8">
          <div class="d-flex flex-column align-items-start">

          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<div class="container">
  <% @diagnostics.each do |diagnostic| %>
    <div class="row">
      <div class="custom-card">
        <h6 class="card-title">Résultat pour : </h6>
        <div class="card-body">
          <h6><%= diagnostic.specialty %></h6>
          <p><%= diagnostic.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
