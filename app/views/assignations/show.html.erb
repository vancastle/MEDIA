 <div class="container2">
   <%= link_to assignations_path, class: "btn btn-med2" do %>
      <%= image_tag("icon-chevron-left.svg") %>
   <% end %>
  <h1>Nom du patient</h1>
</div>

<section class="cards-container">
  <div class="card custom-card-accepted">
        <div class="card-body">
            <div class="accepted-card">
                <div class="accepted-details">
                    <h3>Dr. <%= @doctor.first_name.capitalize %> <%= @doctor.last_name.capitalize %></h3>
                    <h6><%= @doctor.specialty.capitalize %></h6>
                    <%# <h6><%= @doctor.address.capitalize %>
                </div>
                <p class="badge badge-success status-badge"><%= @assignation.status.capitalize %></p>
            </div>
                <%= link_to "Contacter", assignations_path, class: "fs-6 btn-small w-100" %>
        </div>
  </div>

  <div class="card patient-card-details">
          <div class="card-body">
              <div class="accepted-card">
                  <div class="accepted-details">


                    <div class="header-diagnostic">
                      <h3>Détails patient</h3>
                    </div>

                    <div class="row p-3">
                      <div class="col-12 text-start border-bottom pb-2 mb-2">
                        <p class="fw-bold"><%= @patient.first_name.capitalize %> <%= @patient.last_name.capitalize %></p>
                      </div>
                      <div class="col-12 text-start border-bottom pb-2 mb-2">
                        <p><%= @patient.date_of_birth %></p>
                      </div>
                      <div class="col-12 text-start border-bottom pb-2 mb-2">
                        <p><%= @patient.gender %></p>
                      </div>
                      <div class="col-12 text-start border-bottom pb-2 mb-2">
                        <p>+ <%= @patient.phone_number %></p>
                      </div>
                      <div class="col-12 text-start border-bottom pb-2">
                        <p><%= @patient.address %></p>
                      </div>
                    </div>

                  </div>
                </div>
            </div>
  </div>


  <div class="card patient-card-historique">
    <div class="card-body">
      <div class="historique-details">
        <div class="header-diagnostic">
         <h3>Diagnostic</h3>
        </div>
          <p class= "p-3"><%= @diagnostic.description %></p>
      </div>
    </div>
  </div>

</section>

<div class="container chat">
  <h1>The chat starts here</h1>

  <div id="messages" class="messages">
    <% @assignation.messages.each do |message| %>
      <%= render "messages/message", message: message, user: current_user %>
    <% end %>
  </div>

  <%= simple_form_for [@assignation, @message], html: {class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }} do |f| %>
    <% other_user = current_user == @assignation.user ? @assignation.diagnostic.consultation.user : @assignation.user %>
    <%= f.input :content, label: false, placeholder: "message à #{other_user.name}", wrapper_html: {class: "flex-grow-1"} %>
    <%= f.submit "Envoyer", class: "btn btn-primary mb-3" %>
  <% end %>
</div>

